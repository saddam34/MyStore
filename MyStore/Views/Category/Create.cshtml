@model MyStore.Models.Category
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add New Category</h2>

<style>
    .error {
        color: red;
    }
</style>

@using (Html.BeginForm("Create", "Category"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.CategoryName)
        @Html.ValidationMessageFor(m => m.CategoryName, "", new { @class = "error" })
        @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <div>
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
} 